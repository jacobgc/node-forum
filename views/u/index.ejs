<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../templates/header.ejs %>
        <!--Insert custom head content below-->
</head>

<body>
    <%- include ../templates/nav.ejs %>
        <br>
        <div class="row" style="max-width: 500px">
            <div class="col s12 m12">
                <div class="card hoverable" style="max-width: 500px">
                    <div class="card-image cyan darken-3">
                        <img class="center-align" style="left: 16%;max-width: 300px" src="<%=suser.avatarURL%>&s=500">
                        <span class="card-title cyan darken-4"><%=suser.username%></span>
                        <a class="activator btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                    </div>
                    <div class="card-content">
                        <p>
                            <%=suser.bio || "This user has not set a bio"%>
                        </p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">User Stats<i class="material-icons right">close</i></span>
                        <h5>Karma:
                            <a href="/u/<%=suser.username%>/karma">
                                <%=suser.karma || 0%>
                            </a>
                        </h5>
                        <h5>Threads:
                            <a href="/u/<%=suser.username%>/threads">
                                <%=suser.karma || 0%>
                            </a>
                        </h5>
                        <h5>Comments:
                            <a href="/u/<%=suser.username%>/comments">
                                <%=suser.karma || 0%>
                            </a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <%- include ../templates/footer.ejs %>
</body>