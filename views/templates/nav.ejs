                <li><a href="/login">Register/Login</a></li>
                <% }else{ %>
                    <li class="valign-wrapper">
                        <img src="<%=user.avatarURL%>" style="width: 35px;" alt="User profile image">
                        <a class="dropdown-button" href='#' data-belowOrigin=true data-constrainWidth=false data-activates='userDropDown'>
                            <span class="right"><%=user.username%></span>
                        </a>
                    </li>
                    <% } %>
        </ul>
        <form class="right hide-on-med-and-down">
            <div class="input-field">
                <input id="search" type="search" required>
